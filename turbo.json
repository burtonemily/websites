{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NEXT_PUBLIC_ENV_FLAG"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env.local"],
      "env": [
        "NEXT_PUBLIC_SENT_STAKING_API_URL",
        "NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID",
        "FAUCET_WALLET_PRIVATE_KEY"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "persistent": true,
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint-staged": {
      "dependsOn": ["^lint-staged"],
      "cache": false
    },
    "test": {}
  }
}

{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "@session/staking#build": {
      "dotEnv": [".env.production.local", ".env.local", ".env.production", ".env"],
      "env": [
        "NEXT_PUBLIC_SITE_ENV",
        "NEXT_PUBLIC_SENT_STAKING_API_URL",
        "NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID",
        "FAUCET_WALLET_PRIVATE_KEY",
        "NEXT_PUBLIC_ENV_FLAG"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@session/staking#start": {
      "env": [
        "NEXT_PUBLIC_SITE_ENV",
        "NEXT_PUBLIC_SENT_STAKING_API_URL",
        "NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID",
        "FAUCET_WALLET_PRIVATE_KEY",
        "NEXT_PUBLIC_ENV_FLAG"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint-staged": {
      "dependsOn": ["^lint-staged"],
      "cache": false
    },
    "dev": {
      "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"],

      "cache": false,
      "persistent": true
    },
    "test": {
      "dotEnv": [".env.test.local", ".env.test", ".env"]
    }
  }
}
